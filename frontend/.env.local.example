# Solar Installer AI - Frontend Environment Configuration
# Copy this file to .env.local and update with your actual values

# ── API Configuration ──────────────────────────────────────────────
# Backend API URL - Update for your deployment environment
NEXT_PUBLIC_API_URL=http://localhost:8003

# ── Environment Configuration ──────────────────────────────────────
# Next.js environment (development, production)
NODE_ENV=development

# ── Authentication Configuration ───────────────────────────────────
# Frontend authentication settings
NEXT_PUBLIC_AUTH_ENABLED=true

# ── Google Sheets Configuration ────────────────────────────────────
# Google Sheets integration settings
NEXT_PUBLIC_GOOGLE_SHEETS_ENABLED=true

# ── Feature Flags ──────────────────────────────────────────────────
# Enable/disable specific features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_FORECASTING=true
NEXT_PUBLIC_ENABLE_PROCUREMENT=true
NEXT_PUBLIC_ENABLE_WHATSAPP=false

# ── UI Configuration ───────────────────────────────────────────────
# Theme and UI settings
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_COMPANY_NAME="WattMonk"
NEXT_PUBLIC_APP_NAME="Solar Installer AI"

# ── Development Configuration ──────────────────────────────────────
# Development-specific settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_DATA=false

# ── Analytics Configuration (Optional) ─────────────────────────────
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token
